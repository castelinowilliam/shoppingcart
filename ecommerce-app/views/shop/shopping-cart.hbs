{{# if products }}
    <div class="row">  
        <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                <li class="list-group-item">
                    <span class="badge badge-dark float-right">{{ this.qty }}</span>
                    <strong>{{ this.item.title }}</strong>
                    <span class="badge badge-success">{{ this.price }}</span>
                    <div class="btn-group">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></button>
                        <div class="dropdown-menu">
                            <a  class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                            <a  class="dropdown-item" href="/remove/{{this.item._id}}">Remove all</a>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">  
        <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">  
        <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">  
        <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
            <h2><center>No of Items in Cart</center></h2>
        </div>
    </div>
{{/if}}
